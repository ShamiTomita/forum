<div class="banner">
<h1>Please Signup here!</h1>
<%= render partial: "layouts/errors", locals: { object: @user } %>
 <div class="span6 offset3">
<%= form_for(@user, :html => {:class => 'form-horizontal'}) do |f| %>
 <fieldset>
  <div class = "form-group">
  <%= f.label :username, :class => "col-sm-2 control-label" %>
  <div class = "col-sm-10">
  <%= f.text_field :username,:class => "form-control" %><br>
  </div>
  </div>

  <div class = "form-group">
  <%= f.label :email, :class => "col-sm-2 control-label"; %>
  <div class = "col-sm-10">
  <%= f.text_field :email,:class => "form-control" %><br>
  </div>
  </div>

  <div class = "form-group">
  <%= f.label :password, :class => "col-sm-2 control-label" %>
  <div class = "col-sm-10">
  <%= f.password_field :password,:class => "form-control" %><br>
  </div>
  </div>

  <div class = "form-group">
  <%= f.label :age, :class => "col-sm-2 control-label"; %>
  <div class = "col-sm-10">
  <%= f.number_field :age,:class => "form-control" %><br>
  </div>
  </div>
  <div class = "form-group">
  <%= f.label :fav_exercise, :class => "col-sm-2 control-label"; %>
  <div class = "col-sm-10">
  <%= f.text_field :fav_exercise,:class => "form-control" %><br>
  </div>
  </div>

  <div class = "form-group">
  <%= f.label :gym, :class => "col-sm-2 control-label"; %>
  <div class = "col-sm-10">
  <%= f.text_field :gym ,:class => "form-control"%><br>
  </div>
  </div>

  <div class = "form-group">
  <%= f.label "Profile Photo", :class => "col-sm-4 control-label" %>
  <div class = "col-sm-10">
  <%= f.file_field :avatar,:class => "form-control"%><br>
  </div>
  </div>

   <div class = "form-actions">
  <%=f.submit "Signup"%>
<%end%>
</div>
