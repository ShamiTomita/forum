
<% @posts.each do |post|%>
<div class="card mb-2">
    <div class="card-body">
      <ul>
      <p><strong><%= post.comment %></strong> <%=post.d%><p>
        <li>Found in: <%= link_to post.forum_name, forum_path(post.forum_id) %></li>
        <li>Written by: <%= link_to post.username, user_path(post.user_id) %></li>
      </ul>
    </div>
</div>
<%end%>
